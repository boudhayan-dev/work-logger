{
  "manifest_version": 3,
  "name": "Work Logger",
  "version": "1.0",
  "description": "Daily work time logger for JIRA tickets",
  
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://*.jira.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Work Logger",
    "default_icon": {
      "16": "icons/worklog-icon.png",
      "32": "icons/worklog-icon.png",
      "48": "icons/worklog-icon.png",
      "128": "icons/worklog-icon.png"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/worklog-icon.png",
    "32": "icons/worklog-icon.png", 
    "48": "icons/worklog-icon.png",
    "128": "icons/worklog-icon.png"
  }
} 